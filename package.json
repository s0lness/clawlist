{
  "name": "clawlist",
  "version": "0.2.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "build": "rm -rf dist dist-tools && npm run build:app && npm run build:tools",
    "build:app": "tsc -p tsconfig.json",
    "build:tools": "tsc -p tsconfig.tools.json",
    "build:tests": "tsc -p tsconfig.tests.json",
    "test": "npm run build && npm run build:tests && node --test dist-tests/*.test.js",
    "check:repo": "npm run build --silent && node dist-tools/precommit-check.js",
    "hooks:install": "npm run build --silent && node dist-tools/install-git-hooks.js",
    "scenario": "npm run build --silent && node dist-tools/scenario.js run",
    "scenario:print-config": "npm run build --silent && node dist-tools/scenario.js print-config",
    "matrix:run": "npm run build --silent && node dist-tools/run-matrix.js",
    "matrix:up": "npm run build --silent && node dist-tools/matrixRun/matrix-up.js",
    "matrix:bootstrap": "npm run build --silent && node dist-tools/matrixRun/bootstrap-matrix.js",
    "matrix:run:agents": "npm run build --silent && node dist-tools/matrixRun/run-agents-only.js",
    "matrix:run:loop": "npm run build --silent && node dist-tools/matrixRun/run-loop-agents.js",
    "setup:synapse": "npm run build --silent && node dist-tools/setup-synapse.js",
    "create:room": "npm run build --silent && node dist-tools/create-room.js",
    "start": "npm run start:agent",
    "dev": "npm run dev:agent",
    "start:agent": "node dist/cli.js agent --config config/agent_a.json",
    "setup": "node dist/cli.js setup --config-a config/agent_a.json --config-b config/agent_b.json",
    "send": "node dist/cli.js send",
    "events": "node dist/cli.js events",
    "dev:agent": "node src/cli.ts agent --config config/agent.example.json",
    "dev:send": "node src/cli.ts send",
    "dev:events": "node src/cli.ts events",
    "dev:setup": "node src/cli.ts setup --config-a config/agent_a.json --config-b config/agent_b.json"
  },
  "dependencies": {
    "matrix-js-sdk": "^40.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "typescript": "^5.5.4"
  }
}
